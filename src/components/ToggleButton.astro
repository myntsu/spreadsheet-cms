<button type="button" aria-label="Toggle visibility">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 20 20"><path fill="currentColor" d="M.2 10a11 11 0 0 1 19.6 0A11 11 0 0 1 .2 10zm9.8 4a4 4 0 1 0 0-8a4 4 0 0 0 0 8zm0-2a2 2 0 1 1 0-4a2 2 0 0 1 0 4z"/></svg>
</button>

<style lang="scss">
    button {
        align-self: center;
        border: none;

        display: flex;
        justify-content: center;
        align-items: center;

        padding: .25rem 1rem;

        color: hsl(0 0% 91%);
        background-color: hsl(240 70% 70%);

        border-radius: .5rem;
        box-shadow: 2px 2px 0 hsl(0 0% 91%);

        cursor: pointer;

        &.active {
            translate: 2px 2px;
            box-shadow: none;
            background-color: hsl(240 40% 70%);
        }

        &:is(:hover, :focus-visible) {
            opacity: .9;
        }
    }
</style>

<script>
    const buttons = document.querySelectorAll("button");

    buttons.forEach(button => {
        button.addEventListener('click', () => {
            button.classList.toggle("active");
        })
    });
</script>